{
  "manifest_version": 3,
  "name": "Smart Job Tracker",
  "version": "1.0",
  "description": "Track job applications easily with Google Sheets integration",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  
  "oauth2": {
    "client_id": "501630209974-o41ubfg3mnk4naan05t9rt38s5ids4op.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "commands": {
    "open-dialog": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Command+Shift+J"
      },
      "description": "Open job tracker dialog"
    }
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}