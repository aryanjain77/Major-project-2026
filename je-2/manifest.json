{
  "manifest_version": 3,
  "name": "ApplyWise Job Tracker",
  "version": "1.0",
  "description": "Track job applications from any page â€” saves directly to your ApplyWise dashboard",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],

  "host_permissions": [
    "https://*.googleapis.com/*",
    "https://firestore.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*"
  ],

  "oauth2": {
    "client_id": "70281274655-7rdtaafhtn40nl7qug552hf6pech9or9.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "openid"
    ]
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "firebase-app-compat.js",
        "firebase-auth-compat.js",
        "firebase-firestore-compat.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "firebase-app-compat.js",
        "firebase-auth-compat.js",
        "firebase-firestore-compat.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "open-dialog": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Command+Shift+J"
      },
      "description": "Open ApplyWise job tracker"
    }
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}